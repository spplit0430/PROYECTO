<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9E3F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Sección Vocación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#4B869F"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/usuario" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Bienvenido David!!"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/salida_olvido2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="05dp"
                android:src="@drawable/retroceso" />

            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/menu" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BFE5ED"
            android:layout_marginTop="30dp">

            <!-- Contenedor blanco con borde izquierdo redondeado -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/bg_panel_vocacion"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:elevation="4dp">

                <!-- Ícono -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/vocacion_logo" />

                <!-- Contenedor para texto y botón -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center_horizontal">

                    <!-- Texto vocación -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vocación"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <!-- Botón TESTS -->
                    <Button
                        android:id="@+id/btn_tests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TESTS"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2DA9F3"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Sección Universidades -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BFE5ED"
            android:layout_marginTop="40dp">

            <!-- Contenedor blanco con borde derecho redondeado -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_panel_universidades"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:elevation="4dp">

                <!-- Contenedor para texto y botón -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="0dp"
                    android:gravity="center_horizontal">

                    <!-- Texto Universidades -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Universidades"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <!-- Botón CONOCE -->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONOCE"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2DA9F3"/>
                </LinearLayout>

                <!-- Ícono -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/universidades_logo"
                    android:contentDescription="icono universidades"/>
            </LinearLayout>
        </FrameLayout>


        <!-- Sección Costos -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BFE5ED"
            android:layout_marginTop="40dp">

            <!-- Contenedor blanco con borde izquierdo redondeado -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/bg_panel_vocacion"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="30dp"
                android:paddingVertical="16dp"
                android:elevation="4dp">

                <!-- Ícono -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/costos_logo" />

                <!-- Contenedor para texto y botón -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center_horizontal">

                    <!-- Texto vocación -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Costos"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <!-- Botón TESTS -->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PLANEA"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2DA9F3"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>


        <!-- Sección Progreso -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BFE5ED"
            android:layout_marginTop="40dp">

            <!-- Contenedor blanco con borde derecho redondeado -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_panel_universidades"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:elevation="4dp">

                <!-- Contenedor para texto y botón -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="0dp"
                    android:gravity="center_horizontal">

                    <!-- Texto Universidades -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tu Progreso"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <!-- Botón CONOCE -->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VISUALIZA"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2DA9F3"/>
                </LinearLayout>

                <!-- Ícono -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/tuprogreso_logo"
                    android:contentDescription="icono universidades"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>
